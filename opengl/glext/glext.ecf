<?xml version="1.0" encoding="ISO-8859-1"?>
<system xmlns="http://www.eiffel.com/developers/xml/configuration-1-12-0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.eiffel.com/developers/xml/configuration-1-12-0 http://www.eiffel.com/developers/xml/configuration-1-12-0.xsd" name="glext" uuid="8B44ACBA-B553-4BC8-A148-58EA81B08C9D" library_target="glext">
	<description>An OpenGL extension for the Eiffel Game Library.</description>
	<target name="glext">
		<description>An OpenGL extension for the Eiffel Game Library.</description>
		<root all_classes="true"/>
		<version major="2" minor="0" release="0" build="1" product="Eiffel_Game_GL" copyright="Louis Marchand"/>
		<option full_class_checking="false" void_safety="none" syntax="standard">
			<assertions precondition="true" postcondition="true" check="true" invariant="true" loop="true" supplier_precondition="true"/>
		</option>
		<external_include location="$(EIFFEL_LIBRARY)/contrib/library/game2/opengl/glext/spec/include"/>
		<external_include location="-lepoxy">
			<condition>
				<platform value="macintosh"/>
			</condition>
		</external_include>
		<external_include location="-lGL">
			<condition>
				<platform value="macintosh"/>
			</condition>
		</external_include>
		<external_linker_flag value="-lGL">
			<condition>
				<platform value="unix"/>
			</condition>
		</external_linker_flag>
		<external_linker_flag value="-lepoxy">
			<condition>
				<platform value="unix"/>
			</condition>
		</external_linker_flag>
		<external_include location="-lGLU">
			<condition>
				<platform value="macintosh"/>
			</condition>
		</external_include>
		<external_linker_flag value="-lGLU">
			<condition>
				<platform value="unix"/>
			</condition>
		</external_linker_flag>
		<external_library location="-lopengl32">
			<condition>
				<platform value="windows"/>
				<custom name="ISE_C_COMPILER" value="mingw"/>
			</condition>
		</external_library>
		<external_library location="OpenGL32.lib">
			<condition>
				<platform value="windows"/>
				<custom name="ISE_C_COMPILER" value="msc"/>
			</condition>
		</external_library>
		<external_library location="-lglu32">
			<condition>
				<platform value="windows"/>
				<custom name="ISE_C_COMPILER" value="mingw"/>
			</condition>
		</external_library>
		<external_library location="GlU32.lib">
			<condition>
				<platform value="windows"/>
				<custom name="ISE_C_COMPILER" value="msc"/>
			</condition>
		</external_library>
		<library name="base" location="$ISE_LIBRARY\library\base\base.ecf"/>
		<cluster name="glext" location=".\" recursive="true">
			<description>An OpenGL Extension for the Eiffel Game Library.</description>
			<file_rule>
				<exclude>/EIFGENs$</exclude>
				<exclude>/CVS$</exclude>
				<exclude>/.svn$</exclude>
			</file_rule>
		</cluster>
	</target>
</system>
